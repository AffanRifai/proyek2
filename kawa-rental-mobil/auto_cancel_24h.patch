+<?php
+
+namespace App\Console;
+
+use Illuminate\Console\Scheduling\Schedule;
+use Illuminate\Foundation\Console\Kernel as ConsoleKernel;
+use Illuminate\Support\Facades\Log;
+use Illuminate\Support\Facades\DB;
+use Carbon\Carbon;
+
+class Kernel extends ConsoleKernel
+{
+    protected function schedule(Schedule $schedule): void
+    {
+        // Jalankan setiap jam untuk membatalkan booking yang belum dibayar setelah 24 jam
+        $schedule->call(function () {
+            $now = Carbon::now();
+            $expiredBookings = DB::table('bookings')
+                ->whereIn('status_pembayaran', ['menunggu_verifikasi', 'belum_bayar'])
+                ->where('created_at', '<', $now->subHours(24))
+                ->get();
+
+            foreach ($expiredBookings as $booking) {
+                DB::table('bookings')
+                    ->where('id', $booking->id)
+                    ->update([
+                        'status_pembayaran' => 'gagal',
+                        'updated_at' => Carbon::now(),
+                    ]);
+
+                Log::info('Booking otomatis dibatalkan karena melewati 24 jam tanpa pembayaran.', [
+                    'booking_id' => $booking->id,
+                    'id_transaksi' => $booking->id_transaksi ?? null,
+                    'created_at' => $booking->created_at,
+                ]);
+            }
+        })->hourly();
+    }
+
+    protected function commands(): void
+    {
+        $this->load(__DIR__.'/Commands');
+        require base_path('routes/console.php');
+    }
+}
